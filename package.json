{
  "name": "aigc-weekly",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": "^22",
    "pnpm": "^10"
  },
  "scripts": {
    "clean": "rimraf .next && rimraf .open-next",
    "dev:worker": "wrangler dev --port 2442 --cwd worker --persist-to ../.wrangler/state",
    "deploy:worker": "wrangler deploy --cwd worker",
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview --env=$CLOUDFLARE_ENV",
    "deploy": "pnpm run deploy:database && pnpm run deploy:app",
    "deploy:database": "cross-env NODE_ENV=production PAYLOAD_SECRET=ignore payload migrate && wrangler d1 execute D1 --command 'PRAGMA optimize' --env=$CLOUDFLARE_ENV --remote",
    "deploy:app": "opennextjs-cloudflare build --env=$CLOUDFLARE_ENV && opennextjs-cloudflare deploy --env=$CLOUDFLARE_ENV",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "pnpm run generate:types:cloudflare && pnpm run generate:types:payload",
    "generate:types:cloudflare": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts && wrangler types --cwd worker --env-interface CloudflareEnv cloudflare-env.d.ts",
    "generate:types:payload": "payload generate:types",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postinstall": "simple-git-hooks",
    "payload": "payload",
    "wrangler": "wrangler"
  },
  "dependencies": {},
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@cloudflare/containers": "^0.1.0",
    "@eslint-react/eslint-plugin": "^2.7.2",
    "@opennextjs/cloudflare": "^1.14.9",
    "@payloadcms/db-d1-sqlite": "^3.72.0",
    "@payloadcms/next": "^3.72.0",
    "@payloadcms/plugin-mcp": "^3.72.0",
    "@payloadcms/richtext-lexical": "^3.72.0",
    "@payloadcms/storage-r2": "^3.72.0",
    "@payloadcms/translations": "^3.72.0",
    "@payloadcms/ui": "^3.72.0",
    "@types/node": "22",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/rss": "^0.0.32",
    "baseline-browser-mapping": "^2.9.15",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "graphql": "^16.12.0",
    "lint-staged": "^16.2.7",
    "markdown-it-ts": "0.0.2-beta.7",
    "next": "^15.5.9",
    "overtype": "^2.1.1",
    "payload": "^3.72.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.1.2",
    "rss": "^1.2.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.59.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "unrs-resolver",
      "workerd"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "cloudflare": {
    "bindings": {
      "PAYLOAD_SECRET": {
        "description": "Generate a random string using `openssl rand -hex 32`"
      }
    }
  }
}
